<div class="column is-one-third">
  <nav class="panel">
    <p class="panel-heading">Who to Follow</p>    
    <div class="column">       
      <div class="box "></br>
        <% current_user.not_following.each do |user| %>
            <article class="media ">
              <div class="media-left is-hidden-touch">
                <div class="image is-square is-64x64"> 
                    <%= show_photo(user) %>
                </div>
              </div>
              <div class="media-content">
                <div class="content">
                  <strong>
                    <%= link_to(user.username, user_path(user)) %></strong>
                </div>
                </div> </br>
                <div class="media-content">
                <% if current_user.id != user.id %>
                  <% if !current_user.following?(user) %> 
                    <%= form_for(current_user.active_followings.build) do |f| %>
                      <div class=""><%= hidden_field_tag :followed_id, user.id %></div>
                      <%= f.submit "Follow", class: "button is-info is-small" %> 
                    <% end %> 
                  <% else %> 
                    <%= form_for(current_user.active_followings.find_by(followed_id: user.id),  html: {method: :delete}) do |f| %>
                      <%= f.submit "Unfollow", class: "button is-info is-small" %>
                    <% end %>
                  <% end %>
                <% end %>
                </div>
              
            </article>
        <% end %>
      </div></br>  
  </nav>
</div>
