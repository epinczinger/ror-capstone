<%= simple_form_for(@opinion) do |f| %>

<div class="field">
  <div class="control">
    <%= f.input :text, label: "Share what you know", input_html: { class:
    "textarea "}, wrapper: false, label_html: {class: "label"}, placeholder:
    "Any waves over there?", autofocus: true %>
  </div>
</div>

<%= f.button :submit, "Post it!", class: 'button is-info' %> <% end %>
